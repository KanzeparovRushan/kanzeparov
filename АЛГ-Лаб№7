7.1
#include <cstdlib>
#include <iostream>

using namespace std;

float sum(float a, float b)
{
    return a + b;
}

double sum(double a, double b)
{
    return a + b;
}

int main(int argc, char* argv[])
{
    float a, b;
    double e, e1, d, d1;
    cout << "int a= ";
    cin >> a;
    cout << "int b= ";
    cin >> b;

    cout << "razn " << sum (a, b) << endl;

    cout << "double e= ";
    cin >> e;
    cout << "double e1= ";
    cin >> e1;
    cout << "double d= ";
    cin >> d;
    cout << "double d1= ";
    cin >> d1;
    cout << "sum " << sum((e, e1), (d / d1)) << endl;

    system("PAUSE");
    return EXIT_SUCCESS;
}
7.2
#include <iostream>

using namespace std;
int min(int a, ...)
{
    setlocale(LC_ALL, "Russian");
    int* ptr = &a;
    ptr++;
    int result = INT32_MAX;
    while (a != 0)
    {
        if (*ptr < result)
            result = *ptr;
        a--;
        ptr++;
    }
    return result;
}
int main()
{
    int p = min(5, 16, 17, 18, 19, 20);
    cout << "Минимальный элемент: ";
    cout << p << endl;
    p = min(10, 12, 13, 6, 25, 9, 8, 34, 15, 24, 7);
    cout << "Минимальный элемент: ";
    cout << p << endl;
    cout << "Минимальный элемент: ";
    p = min(12, 13, 25, 17, 11, 16, 19, 10, 12, 18, 15, 24, 35);
    cout << p << endl;
    return 0;
